<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wally_nagama.paripigrass.MainActivity">


    <TextView
        android:id="@+id/txv_recog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <Button
        android:id="@+id/amin_recog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amin_recognitionvoice"/>

    <TextView
        android:id="@+id/amin_txvAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:id="@+id/amin_heybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amin_heybutton"/>

</LinearLayout>
